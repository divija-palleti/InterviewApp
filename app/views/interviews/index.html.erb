<p id="notice"><%= notice %></p>

<div class="container mt-5">
  <div class="page-header">
    <h1>Interviews</h1>
  </div>
</div>

<div class="container mt-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th ></th>
        <th>Title</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Interviewer</th>
        <th>Participant</th>
        <th ></th>
      </tr>
    </thead>
    <tbody>
      <% @interviews.each do |i| %>
        <tr>
          <td><%= link_to 'Edit', edit_interview_path(i) %></td>
          <td><%= i.title %></td>
          <td><%= i.starttime%></td>
          <td><%= i.endtime%></td>
          <td><%=  i.interviewer %></td>
          <td><%=  i.participant %></td>
          <td><%= link_to 'Delete', i, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

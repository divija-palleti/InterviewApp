<p id="notice"><%= notice %></p>
<div class="container">
<%= simple_form_for @interview, html: {  multipart: true } do |f| %>
    <% if @interview.errors.any? %>
    
      <div id="errors" class="text-danger">
        <h3>
        <%= pluralize(@interview.errors.count, "error") %>
        prevented this post from being saved
        </h3>
        <% @interview.errors.each do |attr, msg| %>
          <li>
          <%= @interview.errors.full_messages_for(attr).first if @interview.errors[attr].first == msg %>
          </li>
        <% end %>
        
      </div>
    <% end %>
    <div class="form-wrapper">
    <div class="form-group text-center ">
      <%= f.input :title  %>
    </div>
    <div class="form-group text-center">
      <%= f.input :desc %>
    </div>
    <div class="form-group text-center">
      <%= f.input :starttime %>
    </div>
    <div class="form-group text-center">
      <%= f.input :endtime %>
    </div>
    <div class="form-group text-center">
      <%= f.label :Interviewer %> 
      <%= f.collection_select :interviewer_id, @interviewers.all, :id, :email %>    
    </div>

    <div class="form-group text-center">
      <%= f.label "Interviewee" %><br />
      <%= f.collection_check_boxes :interviewee_ids, Interviewee.all, :id, :email do |b| %>
        <div class="collection-check-box">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>
    </div>
    
   
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
    <div class="text-center">
      <%= link_to 'Cancel', root_path %>
    </div>
 
<% end %>
</div>  
</div>